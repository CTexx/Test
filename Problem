def check_harshad(number):

    copy = number

    numbers_list = [i for i in str(copy)]
    

    total = sum(numbers_list)


    if number % total == 0:
        return True
    else:
        return False



number = int(input("Enter a number: "))
result = check_harshad(number)


if result:
    print("It is a Harshad Number")

else:
    print("It is not a Harshad Number")
